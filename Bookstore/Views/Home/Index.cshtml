<script src="~/Scripts/jquery-ui.js"></script>
<script>
    $(function () {
        $.noConflict();
        $("input:text.date").datepicker({ dateFormat: "d" });
    });
    function bootstrapRead(bookid) {
        // Now let us try to retrieve a book [READ]
        var book1 = new Book({ ID: bookid });
        book1.fetch({
            success: function (bookResponse) {
                var ltitle = bookResponse.get("Title");
                if(ltitle.length > 0 )
                    $("#Booktitle").html("The book title is " + bookResponse.get("Title"));
                else
                    $("#Booktitle").html("Not found !");
            }
        });
    }

    $(document).ready(function () {
        $("#Button1").click(function () {
            $("#Button1").css("background-color", "yellow");
        });
        $("#Button2").click(function () {
            $.ajax({
                url: "./Home/SaySomething/",
                context: document.body
            }).done(function (msg) {
                $('#Button2').prop('value', msg)
            });
        });
        $("#Button3").click(function () {
            $.ajax({
                dataType: "json",
                url: "../api/BookWebApi",
                context: document.body
            }).done(function (data) {
                var items = [];
                $.each(data, function (key, val) {
                    items.push("<li id='" + key + "'>" + "Book Title= " +val.Title +  " Publish Year= " + val.publishYear +  "</li>");
                });

                $("<ul/>", {
                    "class": "my-new-list",
                    html: items.join("")
                }).appendTo($("#book_list"));
            });
        });
        $("#Button4").click(function () {
            if ($("#bookidInput").val().length === 0) {
                $("#bookidInput").val("Enter A book id !");
                return;
            }
            bootstrapRead($("#bookidInput").val());
        });
    });
</script>
